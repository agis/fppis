<div>
  <ul>
    <% unless current_page? root_path %>
    <li style="line-height: 25px;">
      <%= link_to "Home", root_path %>
    </li>
    <% end %>

    <li style="margin-bottom: 5px;">
      <% if current_page? who_path %>
        <%= link_to "Who", who_path, class: 'red' %>
      <% else %>
        <%= link_to "Who", who_path %>
      <% end %>
    </li>

    <li style="font-size: 40px; margin-bottom: 6px;">
      <% if controller_name == 'posts' %>
        <%= link_to "Blogs", posts_path, class: 'red' %>
      <% else %>
        <%= link_to "Blogs", posts_path %>
      <% end %>
    </li>

    <li style="font-size: 40px; margin-left: 10px; margin-bottom: 5px;">
      <% if controller_name == 'albums' %>
        <%= link_to "Images", albums_path, class: 'red' %>
      <% else %>
        <%= link_to "Images", albums_path %>
      <% end %>
    </li>

    <li>
      <% if current_page? contact_path %>
        <%= link_to "Contact", contact_path, class: 'red' %>
      <% else %>
        <%= link_to "Contact", contact_path %>
      <% end %>
    </li>
  </ul>
</div>

<% if params[:controller] == 'albums' %>
  <div id="albums-menu">
    <h4 class="oblique">Categories</h4>
    <ul>
      <li><%= link_to 'Food', albums_path + '?c=Food' %></li>
      <li style="margin-left: -22px;"><%= link_to 'People', albums_path + '?c=People' %></li>
      <li style="margin-left: 15px;"><%= link_to 'Places', albums_path + '?c=Places' %></li>
    </ul>
  </div>

  <% unless params[:action] == 'index' %>
  <div id="back-button">
    <ul>
      <li><%= link_to 'Back to Images', albums_path %></li>
    </ul>
  </div>
  <% end %>
<% end %>