<div id="post-details">
  <div class="row">
    <div class="twocol">
      <h1 class="title-label"><%= post.category.title.singularize %></h1>
    </div>
    <%= post.category_title %>
  </div>

  <div class="row">
    <div class="twocol">
      <h1 class="title-label">Story</h1>
    </div>
    <%= post.story_title %>
  </div>

  <div class="row">
    <div class="twocol"></div>
    <div class="subtitle"><%= post.story_subtitle %></div>
  </div>

  <div class="row">
    <div class="twocol"></div>
    <span class="date"><%= format_date(post.publish_date) %></span>
  </div>
</div>

<div id="post-body">
  <div class="twelvecol last">
    <% if controller.action_name == 'index' %>
      <%= raw smart_truncate(post.content, :words => 3) %>
      <%= link_to 'Read More', post %>
    <% else %>
      <%= raw post.content %>
    <% end %>
  </div>
</div>

<div id="post-credits">
  <div class="twelvecol last">
    Story by <%= post.author.name %><br />
    Images by <%= post.photographer.name %>
  </div>

  <div class="twelvecol last">
    Tags:
    <% post.tags.each do |tag| %>
    <%= link_to tag.name, posts_path(:tag => tag.name) %>
    <% end %>
  </div>

  <div class="twelvecol last">
    <hr />
  </div>
</div>

