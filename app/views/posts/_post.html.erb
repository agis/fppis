<div id="post-details">
  <div class="row">
    <div style="float:left; width:80%">
      <div class="title"><%= post.category.title.singularize %></div>
      <%= post.country %>
      <%= " : " + post.city unless post.city.blank? %>
    </div>
    <div class="date"><%= format_date(post.publish_date) %></div>
  </div>

  <div class="row">
    <div class="title">Story</div>
    <%= post.story_title %>
  </div>

  <div class="row">
    <div class="onecol"></div>
    <div class="subtitle"><%= post.story_subtitle %></div>
  </div>
</div>

<div id="post-body">
  <div class="twelvecol last" <%= raw "style=\"margin-top:10px;\"" if controller.action_name == 'index' %>>
    <% if controller.action_name == 'index' %>
      <%= preview_image(post.content) %>
      <%= preview_content(post.content, 50) %>
      <%= link_to 'Read More', post, class: 'readmore' %>
    <% else %>
      <%= raw post.content %>
    <% end %>
  </div>
</div>

<div id="post-credits">
  <div class="credits">
    <div class="fourcol">
      <span class="red">Story</span> by <%= post.author.name %>
    </div>

    <div class="fourcol">
      <span class="red">Images</span> by <%= post.photographer.name %>
    </div>

    <div class="fourcol last">
      corey@fppis.com
    </div>
  </div>

  <div class="twelvecol last">
    <div class="tags">
      <span class="red">Tags:</span>
      <% post.tags.each do |tag| %>
      <%= link_to tag.name, posts_path(:tag => tag.name) %>
      <% end %>
    </div>
  </div>

  <div class="twelvecol last">
    <hr />
  </div>
</div>